pipeline {
    agent {
        label "jenkins-arm-slave"
    }
    environment {
        ANSIBLE_PRIVATE_KEY = credentials('ANSIBLE_PRIVATE_KEY')
    }
        
    stages {
        stage('Cheking Disk Space and Sending Alert') {
            steps {
                sh '''
                    ansible-playbook -i ./inventories/dev_inventory/aws_ec2.yml --private-key=${ANSIBLE_PRIVATE_KEY} ./playbooks/disk_space_alert.yml --extra-vars "env=dev"  
                '''
            }
        }
    }

post {
    always {
        office365ConnectorSend color: '#33FF3E', message: "## Filebeat Restarted For DEVt\n", status: "${currentBuild.currentResult}", webhookUrl: "$FILE_BEAT_WEB_HOOK"
          }
      }


}
